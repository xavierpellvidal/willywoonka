<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".usecases.main.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/linearProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false"
            android:background="@color/oompa_list_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xavier Pell Vidal"
                    android:textSize="25sp"
                    android:textColor="@color/oompa_list_title" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xavierpellvidal@gmail.com"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:textColor="@color/grey600"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:padding="4dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="305dp">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/willywonka"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_engineering_black"
                            app:tint="@color/grey600">
                        </ImageView>

                        <TextView
                            android:id="@+id/txtWork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Developer"
                            android:textStyle="italic"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/grey600"
                            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgGender"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_female_black"
                            app:tint="@color/grey600">
                        </ImageView>

                        <TextView
                            android:id="@+id/txtGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Female"
                            android:textStyle="italic"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/grey600"
                            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_cake_black"
                            app:tint="@color/grey600">
                        </ImageView>

                        <TextView
                            android:id="@+id/txtAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="21 years old"
                            android:textStyle="italic"
                            android:ellipsize="end"
                            android:textSize="14sp"

                            android:textColor="@color/grey600"
                            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_height_black"
                            app:tint="@color/grey600">
                        </ImageView>

                        <TextView
                            android:id="@+id/txtHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="98 cm"
                            android:textStyle="italic"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/grey600"
                            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_place_black"
                            app:tint="@color/grey600">
                        </ImageView>

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Tarragona, Catalunya"
                            android:textStyle="italic"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/grey600"
                            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/grey600"
                android:padding="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFavTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xavier's favourites..."
                    android:textSize="17sp"
                    android:textColor="@color/oompa_list_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_palette_black"
                        app:tint="@color/grey600">
                    </ImageView>

                    <TextView
                        android:id="@+id/txtColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Blue"
                        android:textStyle="italic"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/grey600"
                        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_fastfood_black"
                        app:tint="@color/grey600">
                    </ImageView>

                    <TextView
                        android:id="@+id/txtFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Pizza"
                        android:textStyle="italic"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/grey600"
                        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_library_music_black"
                        android:layout_gravity="top"
                        app:tint="@color/grey600">
                    </ImageView>

                    <TextView
                        android:id="@+id/txtSong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/oompa_profile_sample_text"
                        android:textStyle="italic"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/grey600"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLoading"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/txtLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/loading"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>